<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/drink"
    android:id="@+id/drink">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drinks Poster"
        android:id="@+id/drinksPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:textSize="44dp"
        android:textIsSelectable="true"
        android:theme="@style/Animation.AppCompat.DropDownUp"
        android:textColor="#ff0d090a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log In"
        android:id="@+id/logIn"
        android:textSize="29dp"
        android:textColor="#ff000000"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/facebook" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook"
        android:id="@+id/facebook"
        android:background="#ff1620ff"
        android:textColor="#ffeffff3"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
                android:textSize="30dp"
        android:layout_above="@+id/google"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google"
        android:id="@+id/google"
        android:textColor="#ffffffff"
        android:background="#ffff0d12"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:textSize="30dp"
        android:layout_above="@+id/signUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUp"
        android:background="#fff7ebff"
        android:textColor="#ff1253ff"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/logIn"
        android:layout_alignLeft="@+id/logIn"
        android:layout_alignStart="@+id/logIn" />
</RelativeLayout>
